<Window x:Class="JSONLocalizationTool.WindowLanguages"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSONLocalizationTool"
        mc:Ignorable="d"
        Title="Languages" Height="300" Width="300" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ToolBar Grid.Row="0">
            <Button Name="buttonAddNew" Click="buttonAddNew_Click">
                <Image Source="Resources/icons/document-new.png" Width="16" />
            </Button>
            <Button Name="buttonDelete" Click="buttonDelete_Click">
                <Image Source="Resources/icons/user-trash.png" Width="16" />
            </Button>
            <Button Name="buttonRename" Click="buttonRename_Click">
                <Image Source="Resources/icons/edit-select-all.png" Width="16" />
            </Button>
        </ToolBar>
        <ListView Grid.Row="1" Name="listView" SelectionMode="Single">
        </ListView>
    </Grid>
</Window>
